{% extends 'base.html.twig' %}

{% block body %}

  {% if app.user.entreprise %}
    <div class="window-partenaire">
        <h3> Photos de votre entreprise</h3>
        <div class="window-partenaire__photos">
            {% if app.request.attributes.get('_route') == 'Partenaire' %}

                <div class="window-partenaire__photos__image">
                    {% for fichier in  fichiers %}
                        {% if fichier.typeFichier == "Photos_presentation_entreprise" %}
                            <img src="{{ asset('img/EntreprisePhoto/'~fichier.urlFichier) }}" alt="photo_entreprise">
                        {% endif %}
                    {% endfor %}
                </div>

            {% endif %}
        </div>
        <div> Nom : {{ app.user.entreprise.nom }} </div>
        <div> Tel : {{ app.user.entreprise.telephone }} </div>
        <div> Adresse : {{ app.user.entreprise.adresse }} </div>
        <div> Ville : {{ app.user.entreprise.ville }} </div>
        <div> Email : {{ app.user.entreprise.email }} </div>
        {% if app.user.vendeur %}
        {% else %}
            <div>
                <p> Votre demande est en cours d'examination, vous recevrez une confirmation par email au plus
                    vite ! </p>
                <p>Profitez en pour choisir des photos de présentations et pour entrer une description</p>
            </div>
        {% endif %}
        <a href="{{ path('modifierEntreprise', {'id': entreprise.id}) }}">
            <button class="button button--green">
                Modifier mes informations
            </button>
        </a>

    </div>
  {% endif %}
    {% block javascripts %}
        <script src="{{ asset('Javascripts/Fichiers.js') }}"></script>
    {% endblock %}
{% endblock %}


